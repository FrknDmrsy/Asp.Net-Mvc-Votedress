<!-- END HEAD -->
<body ng-app="myApp">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3" style="background-color:#eeeef0;margin-top:10px;box-shadow: -7px 2px 21px #dbd1d1;padding:10px 10px 10px 10px;">
                <div class="row" style="margin-bottom:10px">
                    <img src="~/Content/global/img/votedress_logo.png" style="margin-left: 28%;margin-top: 10px;" />
                </div>
                <div class="row">
                    <ul class="nav nav-pills" style="margin-left:27%">
                        <li class="active">
                            <a href="#tab_2_1" data-toggle="tab" aria-expanded="true"> Bireysel Hesap </a>
                        </li>
                        <li class="">
                            <a href="#tab_2_2" data-toggle="tab" aria-expanded="false"> Kurumsal Hesabı </a>
                        </li>
                    </ul>
                    <script>
                        function loginAjaxSuccess(result) {
                            if (result.redirectTo) {
                                // the controller action returned a JSON result => it was a successful login
                                // => we redirect the browser to this url
                                document.body.innerHTML = "";
                                $("body").append("<h1 style='text-aling:center;'> KAYIT BAŞARILI. LÜTFEN MAİLİNİZİ KONTROL EDİNİZ VE HESABINIZI AKTİFLEŞTİRİNİ.  GİRİŞ SAYFASINA YÖNLENDİRİLİYORSUNUZ</h1>")
                                setTimeout(function () {
                                    window.location.href = result.redirectTo;
                                }, 5000);

                            } else {

                                if (result.Nereden=="Kurumsal")
                                {
                                    scopeHolder("tab_2_2",result.PartialView);                 
                                }
                                else
                                {
                                    scopeHolder("tab_2_1", result.PartialView);
                                }
                                // the action returned a partial view with the form containing the errors
                                // => we need to update the DOM:
                             
                            }
                        }
                    </script>
                    <div class="tab-content" id="denemee">
                        <div class="tab-pane fade active in" id="tab_2_1" style="padding:30px 120px 30px 120px">
                            @Html.Partial("_BireyselHesapOlustur", Model)
                        </div>
                        <div class="tab-pane fade" id="tab_2_2" style="padding:30px 120px 30px 120px">
                            @Html.Partial("_KurumsalHesapOlustur", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/global/plugins/js.cookie.min.js" type="text/javascript"></script>
